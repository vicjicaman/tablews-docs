<%const entry = values[0]; if(entry){ const company = { ...entry, image:
entry.logo, route: "/companies/"+entry.companyRouteid }; %>

<div class="max-w-4xl flex items-center flex-wrap mx-auto my-16 text-gray-900">
  <div
    class="w-full lg:w-4/5 rounded-lg lg:rounded-l-lg shadow-2xl bg-white mx-6 lg:mx-0"
  >
    <div class="p-4 md:p-8 text-center lg:text-left">
      <!-- Image for mobile view-->
      <div
        class="block lg:hidden rounded-lg shadow-xl mx-auto -mt-16 h-48 w-48 bg-cover bg-center"
        style="background-image: url('<%=company.image.url%>')"
      ></div>

      <div class="flex justify-between">
        <h1 class="text-3xl font-bold pt-8 lg:pt-0"><%=entry.Title%></h1>

        <div class="pt-8 lg:pt-0 text-gray-600 dark:text-gray-200 text-xs">
          <div>
            <b>
              <%if(entry['salary-min'] && entry['salary-max']) {%>
              <i class="fa fa-dollar"></i>
              <%= entry['Salary min']%> to <%= entry['Salary max']%> <% } %></b
            >
          </div>
          <div>
            <span
              class="text-xs px-1 mr-1 font-bold leading-none text-white bg-green-600 rounded-full"
            >
              <i class="fa fa-map-marker"></i> <%= entry['Remote status'] %>
            </span>
          </div>
        </div>
      </div>

      <div class="p-4 mt-4 border-t text-xs">
        <span class="text-xs px-1 mr-1 font-bold leading-none text-gray-600">
          <%= entry.Abstract %>
        </span>
      </div>

      <div class="p-4 border-t"><%- entry.description%></div>

      <%if(company) { %>
      <div
        class="border-t pt-4 flex justify-center lg:justify-start my-1 text-gray-900 dark:text-gray-200 text-sm"
      >
        <img
          alt="Company logo"
          src="<%= company.image.url %>"
          class="object-cover rounded-full h-5 w-5"
        />
        <div class="ml-2">
          <a href="<%= company.route%>"> <%=company.Company%> </a>
        </div>
      </div>
      <div>
        <div>
          <span
            class="text-xs px-1 mr-1 font-bold leading-none text-white bg-blue-600 rounded-full"
          >
            <i class="fa fa-user"></i> <%= company.Employees %>
          </span>
          <span
            class="text-xs px-1 mr-1 font-bold leading-none text-white bg-purple-600 rounded-full"
          >
            <i class="fa fa-building"></i> <%= company.Type %>
          </span>
        </div>
      </div>
      <% } %> <% if(company.markets) { for(const tag of company.markets) { %>
      <a href="#">
        <span
          class="text-xs px-2 mr-1 font-bold leading-none text-white bg-gray-600 rounded-full"
        >
          <%= tag %>
        </span>
      </a>
      <% } } %>
    </div>
  </div>

  <!--Img Col-->
  <div class="w-full lg:w-1/5">
    <img
      src="<%=company.image.url%>"
      class="rounded-none lg:rounded-lg shadow-2xl hidden lg:block -mx-5"
    />
  </div>
</div>

<% } else {%>
<div>Position not found</div>
<%}%>
