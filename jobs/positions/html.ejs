<%for(const entry of values) { /*console.log(entry);*/ const positionRoute =
"/position/"+ entry.companyRouteid+ "/"+entry.positionid %>
<div name="list-inner" class="flex flex-col">
  <div name="item-container" class="border-gray-400 flex flex-row mb-2">
    <div
      class="transition duration-500 shadow ease-in-out transform hover:-translate-y-1 hover:shadow-lg select-none bg-white dark:bg-gray-800 rounded-md w-full p-4 text-black"
    >
      <div class="flex flex-1 items-center">
        <div class="flex-1 pl-1 md:mr-16">
          <div class="font-medium dark:text-white">
            <b class="text-lg"><%= entry.Title %></b>
          </div>

          <div class="mb-4 text-gray-600">
            <span class="text-sm"><%= entry.Abstract %></span>
          </div>

          <%if(entry.logo) { %>
          <div class="flex my-1 text-gray-600 dark:text-gray-200 text-sm">
            <img
              alt="Company logo"
              src="<%= entry.logo.url %>"
              class="object-cover rounded-full h-5 w-5"
            />
            <div class="ml-2">
              <a href="/company/<%= entry.companyRouteid %>">
                <%=entry.companyName%>
              </a>
            </div>
          </div>
          <div>
            <div>
              <span
                class="text-xs px-1 mr-1 font-bold leading-none text-white bg-blue-600 rounded-full"
              >
                <i class="fa fa-user"></i> <%= entry.Employees %>
              </span>
              <span
                class="text-xs px-1 mr-1 font-bold leading-none text-white bg-purple-600 rounded-full"
              >
                <i class="fa fa-building"></i> <%= entry.Type %>
              </span>
            </div>
          </div>
          <% } %>

          <div class="text-gray-600 dark:text-gray-200 text-xs"></div>
        </div>

        <div class="text-gray-600 dark:text-gray-200 text-xs">
          <div>
            <b>
              <%if(entry['Salary min'] && entry['Salary max']) {%>
              <i class="fa fa-dollar"></i>
              <%= entry['Salary min']%> to <%= entry['Salary max']%> <% } %></b
            >
          </div>
          <div>
            <span
              class="text-xs px-1 mr-1 font-bold leading-none text-white bg-green-600 rounded-full"
            >
              <i class="fa fa-map-marker"></i> <%= entry['Remote status'] %>
            </span>
          </div>
        </div>

        <a
          href="<%=positionRoute%>"
          class="md:w-24 sm:w-4 text-right flex justify-end"
        >
          <svg
            width="20"
            fill="currentColor"
            height="20"
            class="hover:text-gray-800 dark:hover:text-white dark:text-gray-200 text-gray-500"
            viewBox="0 0 1792 1792"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M1363 877l-742 742q-19 19-45 19t-45-19l-166-166q-19-19-19-45t19-45l531-531-531-531q-19-19-19-45t19-45l166-166q19-19 45-19t45 19l742 742q19 19 19 45t-19 45z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<%} %>
